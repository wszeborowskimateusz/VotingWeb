{
  "name": "voting_web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "bootbox": "^5.4.0",
    "bootstrap": "^4.5.0",
    "core-js": "^3.6.4",
    "downloadjs": "^1.4.7",
    "fetch-timeout": "0.0.2",
    "jquery": "^3.5.1",
    "moment": "^2.27.0",
    "popper.js": "^1.16.1",
    "vue": "^2.6.11",
    "vue-i18n": "^8.17.3",
    "vue-js-modal": "^2.0.0-rc.5",
    "vue-loading-spinner": "^1.0.11",
    "vue-router": "^3.1.6",
    "vue-toasted": "^1.1.28",
    "vuex": "^3.1.3",
    "vuex-persistedstate": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.0",
    "@vue/cli-plugin-eslint": "^4.3.0",
    "@vue/cli-service": "^4.3.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^6.2.2",
    "vue-cli-plugin-i18n": "^1.0.1",
    "vue-template-compiler": "^2.6.11"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "semi": true,
    "endOfLine": "crlf",
    "arrowParens": "always"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "linebreak-style": 0,
      "eslint linebreak-style": [
        0,
        "error",
        "windows"
      ],
      "indent": [
        "error",
        2
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "=": "ignore",
            "?": "before",
            ":": "before"
          }
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
